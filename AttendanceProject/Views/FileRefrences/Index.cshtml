@model IEnumerable<AttendanceProject.Models.FileRefrence>

@{
    ViewBag.Title = "File Refrences";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>


<table class="table"  id="table33">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileNumber)
                </td>
                <td>
                    <a class="btn btn-primary" href="~/@item.FilePath" target="_blank"><span class="fa fa-download"></span> Explore </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @if (item.IsActive != 1)
                    {
                        <button class="btn btn-primary activebtn" id="activebtn_@item.Id" data-id="@item.Id"><span class="fa fa-check"></span>Active</button>
                    }
                    else
                    {
                        <span class="fa fa-check">done</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>


</table>


@section Scripts {
    <script>
            $('.activebtn').click(function () {
                 var x = $(this).data("id");
            $.ajax({
                url: "@Url.Action("EnableActive", "FileRefrences")",
                type: "POST",
                data: { fileid: x, check:1 },
                traditional: true,
                success: function (dataa, errorMessage) {
                    toastr.success(dataa.message)
                    $("#activebtn_" + x).replaceWith('<span class="fa fa-check">done</span>');
                }
            });
            });      
    </script>
}